<%- include('../partials/header') %>
<h1>Debate Site</h1>

<% debaters.forEach(function(debater) { %>
  <% debater.addDebate.forEach(function(d) { %>
    <div class="card w-50">
      <div class="card-body">
        <h5 class="card-title"><%= d.topic %></h5>
        <p class="card-text"><%= d.description %></p>
      </div>
      <div>
        <form>
          <div class="btn-group" role="group">
            <% if (user) { %>
              <a href="/debaters/addComment" role="button" class="btn btn-success">Add Comment</a>
            <% } %>
            <button id="btnGroupDrop1" type="button" class="btn btn-outline-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Comments
            </button>
            <% debater.comment.forEach(function(d) { %>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="#">Dropdown link</a>
              </div>
            <% }); %>
          </form>
            <% if (user) { %>
              <% if (debater.name === user.name && debater.email === user.email) { %>
                <form action="/debaters/<%= debater._id %>?_method=DELETE" method="POST" class="secondary-content">
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
              <% } %>
            <% } %>
          </div>
      </div>
    </div>
  <% }); %>
<% }); %>
<%- include('../partials/footer') %>
